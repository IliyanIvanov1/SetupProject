# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

lane :lint do

    SWIFTLINT_YML_PATH = './.swiftlint.yml'
    SWIFTLINT_EXECUTABLE = './Pods/SwiftLint/swiftlint'
 
    swiftlint(
        executable: SWIFTLINT_EXECUTABLE,
	config_file: SWIFTLINT_YML_PATH
    )
end

lane :tests do
   run_tests(
     workspace: 'SetupProject.xcworkspace',
     devices: ['iPhone 12'],
     scheme: 'SetupProject'
   )
end